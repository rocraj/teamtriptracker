{
  "name": "teamsplit-frontend",
  "version": "1.0.0",
  "description": "TeamSplit - Group Expense & Budget Sharing App",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200 --disable-host-check",
    "start:localhost": "ng serve",
    "start:network": "ng serve --host 0.0.0.0 --port 4200 --disable-host-check --poll 2000",
    "build": "ng build",
    "build:dev": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "deploy:dev": "npm run build:dev && firebase deploy",
    "deploy:prod": "npm run build:prod && firebase deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@auth0/angular-jwt": "^5.1.2",
    "axios": "^1.6.0",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "jest": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "~5.2.0"
  }
}
